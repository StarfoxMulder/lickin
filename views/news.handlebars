<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12">
        <h1>Featured Articles</h1>
      </div>
    </div>
  </div>
</div>

<div id="pinnedArticleBanner" class="container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <div class="row center">
        {{#each pinned}}
        <div class="card horizontal">
          <div class="card-image">
            <img src="{{this.image}}">
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <h5>{{this.title}}</h5>
              <h6>{{this.source}}</h6>
              <div class="divider"></div>
              <p class="newsSnip">{{this.snip}}</p>
            </div>
            <div class="card-action">
              <a href="{{this.link}}">Full Article Here</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="parallax" id="newsBkgTop"><img src="./assets/images/team.jpg" alt="Unsplashed background img 1"></div>
</div>

<div class="container">
